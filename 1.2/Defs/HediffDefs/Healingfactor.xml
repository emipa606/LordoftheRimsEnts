    <hediffClass>Ent.RemovableHediff</hediffClass>
    <defaultLabelColor>(1.0, 1.0, 1.0)</defaultLabelColor>
    <isBad>false</isBad>
    <initialSeverity>0.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>
</Defs>